<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rplbo.ukdw.todolistfix.controller.FormKategoriController"
            prefWidth="400.0" prefHeight="300.0">

    <children>
        <Label layoutX="130.0" layoutY="20.0" text="Form Tambah Kategori" style="-fx-font-size: 18px;" />

        <Label layoutX="50.0" layoutY="70.0" text="Nama Kategori:" />
        <TextField fx:id="txtNama" layoutX="150.0" layoutY="65.0" prefWidth="200.0" />

        <Label layoutX="50.0" layoutY="110.0" text="Deskripsi:" />
        <TextField fx:id="txtDeskripsi" layoutX="150.0" layoutY="105.0" prefWidth="200.0" />

        <Label layoutX="50.0" layoutY="150.0" text="Jumlah Tugas:" />
        <TextField fx:id="txtTugas" layoutX="150.0" layoutY="145.0" prefWidth="200.0" />

        <Button layoutX="150.0" layoutY="200.0" prefWidth="100.0" text="Simpan" onAction="#simpanData" />
    </children>
</AnchorPane>


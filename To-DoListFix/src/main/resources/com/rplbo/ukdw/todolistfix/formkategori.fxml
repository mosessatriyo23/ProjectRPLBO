<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rplbo.ukdw.todolistfix.controller.FormKategoriController">

    <children>
        <Label layoutX="130.0" layoutY="20.0" style="-fx-font-size: 18px;" text="Form Tambah Kategori" />

        <Label layoutX="50.0" layoutY="70.0" text="Nama Kategori:" />
        <TextField fx:id="txtNamaKategori" layoutX="150.0" layoutY="65.0" prefWidth="200.0" />

        <Label layoutX="50.0" layoutY="110.0" text="Deskripsi:" />
        <TextField fx:id="txtDeskripsi" layoutX="150.0" layoutY="105.0" prefWidth="200.0" />

        <Button fx:id="btnSimpan" layoutX="150.0" layoutY="200.0" onAction="#simpanData" prefWidth="100.0" text="Simpan" />
    </children>
</AnchorPane>
